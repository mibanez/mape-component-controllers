<?xml version="1.0" encoding="UTF-8"?>
<GCMDeployment
	xmlns="urn:gcm:deployment:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:deployment:1.0 http://proactive.inria.fr/schemas/gcm/1.0/ExtensionSchemas.xsd	">

	<environment>
		<javaPropertyVariable name="user.home"/>
	</environment>

	<resources>
		<group refid="pudge-group">
	        <host refid="pudge" />
	    </group>
	</resources>

	<infrastructure>

		<hosts>
			<host id="pudge" os="unix" hostCapacity="1" vmCapacity="8">
				<homeDirectory base="root" relpath="${user.home}"/>
			</host>
		</hosts>
	
		<groups>
	        <sshGroup id="pudge-group" hostList="172.30.65.148" />
	    </groups>
	  
	</infrastructure>

</GCMDeployment>